extends header

block content
    link(rel='stylesheet', href='/DataTables/datatables.min.css')
    script(src='/DataTables/datatables.min.js')
    script(src='/js/Chart.min.js')
    script(src='/js/teamCompare.js')
    style.
        div.dt-button-collection.fixed.four-column {
            margin-left: -500px;
            width: 1000px;
        }
        div.dataTables_scrollBody table tbody tr {
            height: auto !important;
        }
    #averages(style="display:none")= JSON.stringify(teamAverages)
    h1 Team Compare
    h3 Average Table
    table#average-table.display.cell-border(width="100%", style="table-layout: fixed;")
    h3 Average Chart
    select#yaxis.custom-select.mr-sm-2
        option(value='' selected) Choose...
        option(value='2') Crossed Baseline
        option(value='3') Cargoship Cargo
        option(value='4') Rocket 1 Cargo
        option(value='5') Rocket 2 Cargo
        option(value='6') Rocket 3 Cargo
        option(value='7') Dropped Cargo
        option(value='8') Cargo Pickup Time
        option(value='9') Cargo Dropoff Time
        option(value='10') Cargo Success Percent
        option(value='11') Total Cargo
        option(value='12') Cargosip Hatch
        option(value='13') Rocket 1 Hatch
        option(value='14') Rocket 2 Hatch
        option(value='15') Rocket 3 Hatch
        option(value='16') Dropped Hatch
        option(value='17') Hatch Pickup Time
        option(value='18') Hatch Dropoff Time
        option(value='19') Hatch Success Percent
        option(value='20') Total Hatch
        option(value='21') Climbing Duration
        option(value='22') Points Earned
        option(value='23') Climbing Gave Assistance
        option(value='24') Climbing Got Assistance
        option(value='25') Speed
        option(value='26') Stability
        option(value='27') Driver Skill
        option(value='28') Defence
        option(value='29') Anyting Break
        option(value='30') Dead
    canvas#average-chart(width="100%", height="50")
