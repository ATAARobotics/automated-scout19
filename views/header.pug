    style
        | body {
        |     padding: 50px;
        |     font: 14px "Lucida Grande", Helvetica, Arial, sans-serif;
        | }
        | a {
        |     color: #00b7ff;
        | }
        | table.sortable thead {
        |     cursor: pointer;
        | }
        | table.sortable th:not(.sorttable_sorted):not(.sorttable_sorted_reverse):not(.sorttable_nosort):after {
        |     content: " \25B4\25BE";
        | }
    body
    nav.navbar.navbar-expand-md.fixed-top.navbar-light(style='background: #f0f0f0; font-size: 18px')
      // Brand
      a.navbar-brand(style='width: 13%', href='{{ site.baseurl }}/')
        img.img-fluid(src='{{ site.baseurl }}/resources/img/logo.png')
      // Toggler/collapsibe Button
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#collapsibleNavbar')
        span.navbar-toggler-icon
      // Navbar links
      #collapsibleNavbar.collapse.navbar-collapse.justify-content-end
        ul.navbar-nav
          li.nav-item
            a.nav-link(href='{{ site.baseurl }}/') Home
    div.container-fluid
        block content
    
